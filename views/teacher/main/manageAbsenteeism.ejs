<%- include("../../spinners/spinner2.ejs")%>
<div class="manageAbsenteeism">
  <div class="header">
    <h1 class="header__title">Gestion des absences de classe</h1>
  </div>
  <form class="form" id="form">
    <div class="form__group">
      <div class="form__select-group">
        <label class="form__label" for="class-select">classe :</label>
        <select class="form__select" id="class-select" required></select>
      </div>
      <div class="form__select-group">
        <label class="form__label" for="date-select">date :</label>
        <input class="form__input" type="date" id="date-select" required />
      </div>
      <div class="form__select-group">
        <label class="form__label" for="search-student">Rechercher</label>
        <input
          class="form__input"
          type="search"
          placeholder="Rechercher un étudiant..."
          id="search-student"
        />
      </div>
    </div>

    <table class="table">
      <thead class="table__head">
        <tr class="table__row">
          <th class="table__header">#</th>
          <th class="table__header">Numéro de l'élève</th>
          <th class="table__header">Nom de l'élève</th>
          <th class="table__header">Présence</th>
        </tr>
      </thead>
      <tbody class="table__body" id="tbody"></tbody>
    </table>
    <button class="form__button" type="submit">Marquer la présence</button>
  </form>
</div>

<script src="../apiConfig.js"></script>
<script src="../../tAbsenteeisme.js"></script>
