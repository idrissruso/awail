<div class="manageCourses">
  <h1 class="manageCourses__heading">Gérer les cours</h1>
  <div class="manageCourses__courses"></div>
</div>

<!--add new cours modal-->
<div class="addNewCoursModal addNewCoursModal--hide">
  <div class="addNewCoursModal__container">
    <h1 class="addNewCoursModal__heading">Ajouter un nouveau cours</h1>
    <form class="addNewCoursModal__form">
      <div class="addNewCoursModal__form-group">
        <label for="course-name" class="addNewCoursModal__label"
          >Nom du Cours :
        </label>
        <input
          type="text"
          id="course-name"
          class="addNewCoursModal__input"
          placeholder="Entrez le nom du cours"
          required
        />
      </div>
      <div class="addNewCoursModal__form-group">
        <label for="instructor" class="addNewCoursModal__label"
          >Instructeur</label
        >
        <select id="instructor" class="addNewCoursModal__input">
          <option value="Instructeur 1">Instructeur 1</option>
          <option value="Instructeur 2">Instructeur 2</option>
          <option value="Instructeur 3">Instructeur 3</option>
          <option value="Instructeur 4">Instructeur 4</option>
        </select>
      </div>
      <div class="addNewCoursModal__form-group">
        <label for="course-schedule" class="addNewCoursModal__label"
          >Programme Hebdomadaire :
        </label>
        <div class="addNewCoursModal__schedule" id="program">
          <div class="addNewCoursModal__schedule-day">
            <label>Jour</label>
            <select class="addNewCoursModal__input" required>
              <option value="Lundi">Lundi</option>
              <option value="Mardi">Mardi</option>
              <option value="Mercredi">Mercredi</option>
              <option value="Jeudi">Jeudi</option>
              <option value="Vendredi">Vendredi</option>
              <option value="Samedi">Samedi</option>
              <option value="Dimanche">Dimanche</option>
            </select>
          </div>
          <div class="addNewCoursModal__schedule-time">
            <label>Heure de début</label>
            <input
              type="text"
              class="addNewCoursModal__input"
              placeholder="09:00"
              required
            />
          </div>
          <div class="addNewCoursModal__schedule-time">
            <label>Heure de fin</label>
            <input
              type="text"
              class="addNewCoursModal__input"
              placeholder="11:30"
              required
            />
          </div>
        </div>
        <div class="addNewCoursModal__schedule" id="program">
          <div class="addNewCoursModal__schedule-day">
            <label>Jour</label>
            <select class="addNewCoursModal__input" required>
              <option value="Lundi">Lundi</option>
              <option value="Mardi">Mardi</option>
              <option value="Mercredi">Mercredi</option>
              <option value="Jeudi">Jeudi</option>
              <option value="Vendredi">Vendredi</option>
              <option value="Samedi">Samedi</option>
              <option value="Dimanche">Dimanche</option>
            </select>
          </div>
          <div class="addNewCoursModal__schedule-time">
            <label>Heure de début</label>
            <input
              type="text"
              class="addNewCoursModal__input"
              placeholder="09:00"
            />
          </div>
          <div class="addNewCoursModal__schedule-time">
            <label>Heure de fin</label>
            <input
              type="text"
              class="addNewCoursModal__input"
              placeholder="11:30"
            />
          </div>
        </div>
        <div class="addNewCoursModal__schedule" id="program">
          <div class="addNewCoursModal__schedule-day">
            <label>Jour</label>
            <select class="addNewCoursModal__input" required>
              <option value="Lundi">Lundi</option>
              <option value="Mardi">Mardi</option>
              <option value="Mercredi">Mercredi</option>
              <option value="Jeudi">Jeudi</option>
              <option value="Vendredi">Vendredi</option>
              <option value="Samedi">Samedi</option>
              <option value="Dimanche">Dimanche</option>
            </select>
          </div>
          <div class="addNewCoursModal__schedule-time">
            <label>Heure de début</label>
            <input
              type="text"
              class="addNewCoursModal__input"
              placeholder="09:00"
            />
          </div>
          <div class="addNewCoursModal__schedule-time">
            <label>Heure de fin</label>
            <input
              type="text"
              class="addNewCoursModal__input"
              placeholder="11:30"
            />
          </div>
        </div>
      </div>

      <div class="addNewCoursModal__buttons">
        <button
          class="addNewCoursModal__btn addNewCoursModal__btn--cancel"
          type="reset"
        >
          Annuler
        </button>
        <button
          class="addNewCoursModal__btn addNewCoursModal__btn--add"
          type="submit"
        >
          Ajouter
        </button>
      </div>
    </form>
  </div>
</div>

<!--cours details modal-->
<div class="courseDetailsModal courseDetailsModal--hide">
  <div class="courseDetailsModal__container">
    <h1 class="courseDetailsModal__heading">Détails du cours</h1>

    <div class="courseDetailsModal__info">
      <p><span class="infoLabel">Id du cours :</span> 101</p>
      <p><span class="infoLabel">Titre du cours :</span> Mathématiques</p>
