<%- include("../spinners/spinner2.ejs")%>
<div class="addStudent">
  <div class="addStudent__container">
    <h1 class="addStudent__heading" id="addStuTitle">Ajouter un élève</h1>
    <div class="addStudent__content">
      <form action="#" class="addStudent-form">
        <h3 id="heading">Détails d'élève</h3>
        <div class="student">
          <div class="addStudent-form__group" id="matricule">
            <label
              class="addStudent-form__label"
              for="student-no"
              id="addStuMatricule"
              >Matricule</label
            >
            <input
              type="text"
              name="student-no"
              id="student-no"
              class="addStudent-form__input"
              placeholder="Matricule"
              required
            />
          </div>

          <div class="addStudent-form__group">
            <label
              class="addStudent-form__label"
              for="student-name"
              id="addStuName"
              >Nom Complet</label
            >
            <input
              type="text"
              name="student-name"
              id="student-name"
              class="addStudent-form__input"
              placeholder="Nom complet"
              required
            />
          </div>
          <div class="addStudent-form__group">
            <label
              class="addStudent-form__label"
              for="student-phone"
              id="addStuPhone"
              >Téléphone</label
            >
            <input
              type="text"
              name="student-phone"
              id="student-phone"
              class="addStudent-form__input"
              placeholder="Téléphone"
              required
            />
          </div>
          <div class="addStudent-form__group">
            <label
              class="addStudent-form__label"
              for="student-email"
              id="addStuEmail"
              >E-mail</label
            >
            <input
              type="email"
              name="student-email"
              id="student-email"
              class="addStudent-form__input"
              placeholder="Email"
              required
            />
          </div>
          <div class="addStudent-form__group" id="age">
            <label
              class="addStudent-form__label"
              for="student-age"
              id="addStuAge"
              >Date de naissance</label
            >
            <input
              type="date"
              name="student-age"
              id="student-age"
              class="addStudent-form__input"
              placeholder="date de naissance"
              required
            />
          </div>
          <div class="addStudent-form__group" id="sex">
            <label
              class="addStudent-form__label"
              for="student-sex"
              id="addStuSex"
              >Gendre</label
            >
            <select
              name="student-sex"
              id="student-sex"
              class="addStudent-form__input"
              required
            >
              <option value="Masculin" id="addStuGM">Masculin</option>
              <option value="Feminin" id="addStuGF">Feminin</option>
            </select>
          </div>
          <div class="addStudent-from__group">
            <label
              class="addStudent-form__label"
              for="student-class"
              id="addStuClass"
              >Classe</label
            >
            <select
              name="student-class"
              id="student-class"
              class="addStudent-form__input"
              required
            ></select>
          </div>
          <div class="addStudent-from__group">
            <label
              class="addStudent-form__label"
              for="student-img"
              id="addStuImg"
              >Photo</label
            >
            <input type="file" class="addStudent-form__input" id="image" />
          </div>
        </div>
        <h3 id="addStheading">Détails du Parent</h3>
        <div class="parent">
          <div class="addStudent-form__group">
            <label
              class="addStudent-form__label"
              for="parent-name"
              id="addStuPName"
              >Nom Complet</label
            >
            <input
              type="text"
              name="parent-name"
              id="parent-name"
              class="addStudent-form__input"
              placeholder="Nom complet"
            />
          </div>
          <div class="addStudent-form__group">
            <label
              class="addStudent-form__label"
              for="parent-profession"
              id="addStuPProfession"
              >Profession</label
            >
            <input
              type="text"
              name="parent-profession"
              id="parent-profession"
              class="addStudent-form__input"
              placeholder="Profession"
            />
          </div>
          <div class="addStudent-form__group">
            <label
              class="addStudent-form__label"
              for="parent-tel"
              id="addStuPTel"
              >Téléphone</label
            >
            <input
              type="tel"
              name="parent-tel"
              id="parent-tel"
              class="addStudent-form__input"
              placeholder="Tel"
            />
          </div>
          <div class="addStudent-form__group">
            <label
              class="addStudent-form__label"
              for="parent-email"
              id="addStuPEmail"
              >Email</label
            >
            <input
              type="email"
              name="parent-email"
              id="parent-email"
              class="addStudent-form__input"
              placeholder="Email"
            />
          </div>
        </div>
        <h3 id="addStAdressH">Adresse</h3>
        <div class="adress">
          <div class="addStudent-form__group">
            <label class="addStudent-form__label" for="adress" id="addStuAdress"
              >Adresse Complete</label
            >
            <textarea
              name="student-address"
              id="adress"
              class="addStudent-form__input"
              cols="30"
              rows="3"
              style="width: 30rem"
            ></textarea>
          </div>
        </div>
        <div class="addStudent-form__group">
          <button class="addStudent-form__btn" id="addStuBtn" type="submit">
            Ajouter
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="apiConfig.js"></script>
<script src="addStudent.js"></script>
<script src="langManager.js"></script>
<script src="languages/addStudent.js"></script>
