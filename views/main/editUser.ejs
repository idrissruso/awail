<div class="editUser">
  <div class="editUser__container">
    <h1 class="editUser__heading">Mettre √† jour le profil d'utilisateur</h1>
    <div class="editUser__content">
      <form class="form">
        <div class="form__box-img">
          <figure>
            <img
              src="profile.png"
              alt="user image"
              class="form__box-img--img"
            />
            <figcaption class="form__box-img--caption">üñãÔ∏è</figcaption>
          </figure>
          <script>
            var FullName = `<%- admin.FullName %>`
            var name = FullName.split(' ')[0]
            var surname = FullName.split(' ')[1]
            var userId = `<%- loggedInUser._id %>`
            var adminId = `<%- admin._id %>`
            document.getElementById('name').placeholder = name
            document.getElementById('surname').placeholder = surname
          </script>

          <span class="form__box-img--name"><%- admin.FullName %></span>
          <span class="form__box-img--email"><%- admin.Email %></span>
          <input type="file" class="form__box-img--file" id="file" />
          <label for="file" class="form__box-img--btn">Modifier L'image</label>
        </div>
        <div class="form__box-info">
          <h3 class="form__box-info--heading">Modifier le profil</h3>
          <div class="form__box-info--group">
            <input
              type="text"
              name="name"
              id="name"
              class="form__box-info--input"
              placeholder="Nom"
              required
            />
          </div>
          <div class="form__box-info--group">
            <input
              type="text"
              name="surname"
              id="surname"
              class="form__box-info--input"
              placeholder="Pr√©nom"
              required
            />
          </div>
          <div class="form__box-info--group">
            <input
              type="email"
              name="email"
              id="email"
              class="form__box-info--input"
              placeholder="<%- admin.Email %>"
              required
            />
          </div>
          <div class="form__box-info--group">
            <input
              type="phone"
              name="phone"
              id="phone"
              class="form__box-info--input"
              placeholder="T√©l√©phone"
              required
            />
          </div>
          <div class="form__box-info--group">
            <label for="role" class="form__box-info--label"
              >Nom d'Utilisateur</label
            >
            <input
              type="text"
              name="userName"
              id="userName"
              class="form__box-info--input"
              placeholder="<%- loggedInUser.username %>"
              required
            />
          </div>
          <div class="form__box-info--group">
            <label for="role" class="form__box-info--label">Role</label>
            <select name="role" id="role" class="form__box-info--input">
              <option value="admin">Admin</option>
              <option value="user">Utilisateur</option>
            </select>
          </div>

          <button class="form__box-info--btn">Modifier</button>
        </div>
      </form>
    </div>
  </div>
</div>
